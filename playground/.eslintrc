{
  "extends": [
    "airbnb",
    "prettier/react"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "max-len": [1, {"code": 80}],
    "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
    "prettier/prettier": ["error", { "singleQuote": true }],
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
    "import/no-extraneous-dependencies": [2, {
      "devDependencies": ["test/**"]
    }]
  }
}
